{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
